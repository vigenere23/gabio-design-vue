{
  "name": "@vigenere23/gio",
  "version": "1.3.2",
  "publishConfig": {
    "access": "public"
  },
  "description": "Vue design library by Gabriel St-Pierre",
  "main": "dist/gio.umd.js",
  "browser": "dist/gio.umd.js",
  "module": "dist/gio.common.js",
  "unpkg": "dist/gio.umd.min.js",
  "types": "gio.d.ts",
  "files": [
    "lib/*",
    "dist/*",
    "gio.d.ts"
  ],
  "scripts": {
    "setup": "yarn && cd showcase && yarn && cd -",
    "build": "yarn build:vue && yarn build:lib",
    "build:vue": "vue-cli-service build --target lib --name gio --dest dist --report src/vue/entry.ts",
    "build:lib": "node ./scripts/build-lib.js",
    "build:showcase": "vue-cli-service build --dest dist-showcase showcase/main.ts",
    "serve:showcase": "vue-cli-service serve showcase/main.ts",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@openfonts/sen_latin": "^1.0.3",
    "dompurify": "^2.0.15",
    "marked": "^1.1.1",
    "prismjs": "^1.21.0",
    "typeface-fira-code": "^1.1.4",
    "typeface-roboto": "^0.0.75",
    "vue": "^2.6.11",
    "vue-class-component": "^7.2.5",
    "vue-prism-component": "^1.2.0",
    "vue-property-decorator": "^9.0.0"
  },
  "devDependencies": {
    "@types/dompurify": "^2.0.4",
    "@types/marked": "^1.1.0",
    "@types/node": "^14.6.2",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "@vue/cli-plugin-babel": "^4.3.1",
    "@vue/cli-plugin-eslint": "^4.5.4",
    "@vue/cli-plugin-typescript": "^4.3.1",
    "@vue/cli-service": "^4.3.1",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^5.1.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vue": "^6.2.2",
    "prettier": "^2.1.1",
    "raw-loader": "^4.0.1",
    "sass": "^1.26.10",
    "sass-loader": "^10.0.1",
    "typescript": "^3.8.3",
    "vue-template-compiler": "^2.6.11"
  },
  "peerDependencies": {
    "prismjs": "^1.21.0",
    "vue": "^2.6.11"
  },
  "engines": {
    "node": ">=10"
  },
  "directories": {
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vigenere23/gio-library.git"
  },
  "keywords": [
    "vue",
    "design"
  ],
  "author": "Gabriel St-Pierre",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vigenere23/gio-library/issues"
  },
  "homepage": "https://github.com/vigenere23/gio-library#readme"
}
