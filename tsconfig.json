{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "declarationDir": "./lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "types": ["node", "vue", "webpack-env"],
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./lib",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["./src"],
  "exclude": [
    "./node_modules",
    "./build",
    "./dev",
    "./dist",
    "./lib",
    "./scripts",
    "./src/initializers",
    "./src/components",
    "./src/styles",
    "./src/entry.ts"
  ]
}
